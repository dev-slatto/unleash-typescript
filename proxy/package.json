{
  "name": "unleash-proxy",
  "version": "1.0.0",
  "description": "Implementation of Unleash proxy written in Typescript",
  "main": "index.js",
  "scripts": {
    "build": "tsc --skipLibCheck",
    "build-and-start": "tsc && node ./dist/index.js",
    "start": "node ./dist/index.js",
    "test": "echo 'no tests found'",
    "prettier:fix": "npx prettier --write .",
    "prettier:check": "npx prettier --list-different .",
    "release": "release-it"
  },
  "release-it": {
    "github": {
      "release": false
    },
    "git": {
      "commitMessage": "Release v${version}",
      "requireBranch": [
        "main"
      ]
    },
    "npm": {
      "publish": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev-slatto/unleash-typescript.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dev-slatto/unleash-typescript/issues"
  },
  "homepage": "https://github.com/dev-slatto/unleash-typescript#readme",
  "dependencies": {
    "@unleash/proxy": "^0.17.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "lint-staged": "^14.0.1",
    "prettier": "3.0.2",
    "release-it": "^16.1.5",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.10",
    "@types/gravatar": "^1.8.1",
    "@types/passport": "^1.0.4",
    "typescript": "^5.2.2"
  }
}